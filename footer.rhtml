<script type="text/javascript">
  jQuery(".date").each(function() {
		var d = jQuery(this).text().split(/,? /);
		<% if html_language == 'en' %>
		  var month = d[0];
			var day = d[1];
		<% else %>
		  var month = d[1];
			var day = d[0];
    <% end %>
	});
	jQuery("#user").prependTo("#conecte-se");
	jQuery("#conecte-se").prepend("<a href='/account/signup'><span class='label-conect'>Inscreva-se</span></a>");
  jQuery("#top-search").appendTo("#top-functions");
  jQuery(".link-list-block li a").append("<span class='link-this-page-background'>&nbsp;</span>");
</script>

<div id="footer-content">
<ul>
  <li>
    <strong>Blogoosfero</strong>
