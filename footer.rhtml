      <li><%= link_to 'Página Inicial', '/' %></li>
      <li><%= link_to 'Quem Somos', '/fundacao-blogoosfero' %></li>
      <li><%= link_to 'Termos de Uso', '/site/terms' %></li>
      <li><%= link_to 'Netiqueta', '/ajuda/netiqueta' %></li>
      <li><%= link_to 'Ajuda', '/ajuda' %></li>
    </ul>
  </li>
  <li>
    <strong>Conecte-se</strong>
    <ul id="external-sns">
      <li class="twitter"><a href="https://twitter.com/Blogoosfero">Twitter</a></li>
      <li class="facebook"><a href="http://www.facebook.com/fundacaoblogoosfero">Facebook</a></li>
      <li class="identica"><a href="http://identi.ca/blogoosfero">Identi.ca</a></li>
      <li class="youtube"><a href="http://www.youtube.com/blogoosfero">Youtube</a></li>
    </ul>
  </li>
  <li>
    <% if logged_in? %>
    <strong><%= user.name %></strong>
    <ul>
      <li><%= link_to 'Painel de Controle', "/myprofile/#{user.identifier}" %></li>
      <li><%= link_to 'Amigos',  "/myprofile/#{user.identifier}/friends" %></li>
      <li><%= link_to 'Comunidades', "/myprofile/#{user.identifier}/memberships" %></li>
    </ul>
    <% else %>
    <strong>Acesso</strong>
    <form id="footer-login" action="/account/login" method="post">
      <input name="user[login]" placeholder="<%=_('User name')%>" type="text">
      <input name="user[password]" placeholder="<%=_('Password')%>" type="password">
      <div>
        <input type="submit" value="<%=_('Ok')%>">
        <%= link_to _('Sign up'), '/account/signup' %>
      </div>
    </form>
    <% end %>
  </li>
  <li>
    <form id="footer-search" action="/search">
      <input name="query" placeholder="<%=_('Search')%>">
    </form>
  </li>
</ul>
